{
  "config": "data/parameters.json",
  "results_root": "Results",
  "seed": 42,
  "tariffs": ["tar_s", "tar_w", "tar_sw", "tar_flat", "tar_tou"],

  "runs": [
    { "data": "data/Simulation_CY_Cur_HP__PV5000-HB5000.csv", "start_date": "01/01/2000 00:00", "days": 365, "run_label": "CY_year" },
    { "data": "data/Simulation_WY_Cur_HP__PV5000-HB5000.csv", "start_date": "01/01/2000 00:00", "days": 365, "run_label": "WY_year" }
  ],

  "eval": [
    { "data": "data/Simulation_CY_Fut_HP__PV5000-HB5000.csv", "start_date": "01/01/2000 00:00", "days": 365, "run_label": "EVAL_CY_year" },
    { "data": "data/Simulation_WY_Fut_HP__PV5000-HB5000.csv", "start_date": "01/01/2000 00:00", "days": 365, "run_label": "EVAL_WY_year" }
  ],

  "il": {
    "actions": ["PBESS", "Pev", "chi_pv"],
    "epochs": 500,
    "batch_size": 256,
    "lr": 0.001,
    "weight_decay": 0.0,
    "val_frac": 0.2,
    "patience": 10,
    "improvement_tol": 1e-6,
    "grad_clip": 1.0,
    "hyperparameters": {
      "hidden_sizes": [256, 128],
      "dropout": 0.0
    }
  },

  "il_hpo": {
    "enabled": true,
    "seed": 42,
    "n_trials": 30,
    "trial_epochs": 20,
    "trial_patience": 3,

    "sample_frac": 0.10,
    "max_samples": 20000,

    "mask_mode": "per_feature",
    "mask_min_features": 8,

    "hidden_sizes": [[256, 128], [256, 256], [512, 256]],
    "batch_sizes": [128, 256, 512],
    "dropout_range": [0.0, 0.3],
    "lr_log10_range": [-4.5, -2.5],
    "wd_log10_range": [-6.0, -3.0]
  }
}
